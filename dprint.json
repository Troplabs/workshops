{
  "incremental": true,
  "lineWidth": 110,
  "useTabs": false,
  "typescript": {
    "indentWidth": 2,
    "quoteStyle": "preferSingle",
    "semiColons": "asi",
    "arguments.trailingCommas": "onlyMultiLine",
    "arrowFunction.useParentheses": "preferNone",
    "preferSingleLine": true,
    "ifStatement.singleBodyPosition": "sameLine"
  },
  "json": {
    "indentWidth": 2
  },
  "markdown": {
  },
  "includes": ["**/*.{ts,js,json,md}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "dist",
    "locales"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.65.1.wasm",
    "https://plugins.dprint.dev/json-0.14.1.wasm",
    "https://plugins.dprint.dev/markdown-0.12.2.wasm"
  ]
}
